IPADDR=""
RANGE=""
SHAREDSECRET="3f09e646d"
UCARP_RUN_SCRIPT=/sbin/ucarp-for-virt-ip-run

source /usr/share/seecr-tools/functions.d/default
source /usr/share/seecr-tools/functions.d/svc

mydir=$(cd $(dirname $0); pwd)              #DO_NOT_DISTRIBUTE
UCARP_RUN_SCRIPT=${mydir}/ucarp-for-virt-ip-run       #DO_NOT_DISTRIBUTE

function show_usage {
    message "Usage $0 --ip <virtual ipaddress> [--name <service name>]"
}

TEMP=$(getopt \
    --options "" \
    --long ip::,name:: \
    -n "$0" -- "$@")

eval set -- "$TEMP"

while true ; do
    case "$1" in
        --ip)
            case "$2" in
                "")
                    show_usage; exit 1
                    ;;
                *)
                    IPADDR=$2; shift 2
                    ;;
            esac
            ;;
        --name)
            case "$2" in
                "")
                    show_usage; exit 1;
                    ;;
                *)
                    NAME=$2; shift 2
                    ;;
            esac
            ;;
        --)
            shift
            break
            ;;
        *)
            echo "Unknown option specified."
            exit 1
            ;;
    esac
done

set -o errexit

if [ -z "${IPADDR}" ]; then
    show_usage
    exit 1
fi

if [ -z "${NAME}" ]; then
    NAME=${IPADDR}
fi


cat << EOF > /etc/zp/ucarp.d/ucarp_${NAME}.config
# Config file for ${NAME}
IPADDR="${IPADDR}"
EOF
message_with_enter "Please restart zoekplatform-loadbalancer
$ /etc/init.d/zoekplatform-loadbalancer restart"